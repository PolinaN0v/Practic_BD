<Window x:Class="Shopping_Center.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_Center"
        mc:Ignorable="d"
        Title="Captcha" Height="450" Width="800">
    
    <Grid Background="{x:Null}" Visibility="Visible">

        <Border BorderBrush="black" BorderThickness="3" Margin="131,72,390.6,237">
            <Image x:Name="CaptchaImage" Loaded="CaptchaImage_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top" Height="108" Width="259" Margin="-0.2,-0.2,0,-3"/>
        </Border>
        <TextBox x:Name="CaptchaWrite" HorizontalAlignment="Left" Height="41" Margin="131,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>

        <Button Content="Button" HorizontalAlignment="Left" Height="58" Margin="468,191,0,0" VerticalAlignment="Top" Width="195" Click="SaveCaptcha_Click"/>
    </Grid>
</Window>
