<Window x:Class="Petshop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_Center"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="400" FontSize="14" Background="SlateGray" >
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="Авторизация" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Image Source="Emblema.png" HorizontalAlignment="Center" Height="150" />
            <Separator></Separator>
            <Label Content="Логин" Foreground="Wheat"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Пароль" Foreground="Wheat"/>
            <TextBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Name="btnLogin" Click="btnLogin_Click" Content="Войти" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
